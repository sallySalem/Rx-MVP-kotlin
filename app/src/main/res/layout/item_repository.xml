<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_item_margin"
    android:orientation="vertical"
    android:padding="@dimen/default_item_padding">
    <!-- Repository Name -->
    <TextView
        android:id="@+id/tv_repository_name"
        style="@style/TextAppearance.Size14.white.bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Repository Description -->
    <TextView
        android:id="@+id/tv_repository_description"
        style="@style/TextAppearance.Size14.white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Repository Update time -->
    <TextView
        android:id="@+id/tv_repository_updated_time"
        style="@style/TextAppearance.Size12.black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>